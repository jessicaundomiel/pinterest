<h1>My Pins</h1>

<div id="columns">
  <% @pins.each do |pin| %>
  <div class="item-background item-info <%= ' nsfw' if pin.nsfw == true %>">
    <h3><%= pin.name %></h3>
    <div class="content">
      <div class="pin-image">
        <%= image_tag(pin.image_url, :width => 100) %>
          <% if pin.nsfw == true %>
            <h5 class="nsfw-button">NSFW</h5>
          <% end %>
      </div>
      <div class="item-info">
        <h4>Board Name: <%= pin.board.name rescue "N/A" %><h4>
      </div>
    </div>
    <div class="show-msg" style="display:none;">
        Show Content
    </div>
    <div class="item-links">
        <%= link_to 'Show', pin %> |
        <%= link_to 'Edit', edit_pin_path(pin) %> |
        <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?'} %>
    </div>
  </div>
  <% end %>
</div>

<br>

<div id="navbar2">
  <%= link_to 'Delete All Pins', Pin, method: :delete, data: {confirm: 'Are you sure?' } %> |
  <%= link_to 'New Pin', new_pin_path %>
</div>
