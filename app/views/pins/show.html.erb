<!-- <p id="notice"><%= notice %></p> -->

<p>
  <strong>Name:</strong>
  <%= @pin.name %>
</p>

<div class="<%= ' nsfw' if @pin.nsfw == true %>">
  <div class="content">
    <p>
      <strong>Image:</strong><br />
      <%= image_tag(@pin.image_url, :width => 200) if @pin.image.present? %>
    </p>

    <p>
      <strong>Notice:</strong>
      <% if @pin.nsfw == true %>
      	<%= "Not Safe for Work" %>
        <h5 class="nsfw-button">NSFW</h5>
      <% elsif @pin.nsfw == false %>
      	<%= "Safe for Work" %>
      <% end %>
    </p>
  </div>
  <div class="show-msg" style="display:none;">
    Show Content
  </div>
</div>

<p>
  <strong>Board:</strong>
  <%= @pin.board.name rescue "N/A" %>
</p>

<p>
  <strong>User:</strong>
  <%= @pin.user.first_name rescue "N/A" %>
</p>

<div id="navbar2">
<%= link_to 'Edit', edit_pin_path(@pin) %> |
<%= link_to 'Back', pins_path %>
</div>
